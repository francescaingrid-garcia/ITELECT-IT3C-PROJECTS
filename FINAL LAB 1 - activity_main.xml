<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayoutContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your country:"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type here..."
            android:minHeight="48dp"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:completionHint="Select one from suggestions"
            android:hint="Select a country"
            tools:ignore="HardcodedText,TouchTargetSizeCheck" />

        <Spinner
            android:id="@+id/sampleSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/sample_options"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/standardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Standard Button"
            android:layout_marginTop="20dp"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:contentDescription="Camera Button"
            android:src="@android:drawable/ic_menu_camera"
            tools:ignore="HardcodedText,ImageContrastCheck,RedundantDescriptionCheck" />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="ON"
            android:textOff="OFF"
            android:layout_marginTop="10dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
